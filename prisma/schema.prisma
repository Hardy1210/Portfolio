generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model Like {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  slug      String
  visitorId String
  createdAt DateTime @default(now())

  @@unique([slug, visitorId]) // Índice compuesto único
}
